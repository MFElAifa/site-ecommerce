{% extends "base.html.twig" %}

{% block title %}
	Mes commandes
{% endblock %}

{% block body %}
	<h1>Mes commandes</h1>
	<table class="table">
		<thead>
			<tr>
				<th>Numéro</th>
				<th>Adresse</th>
				<th>Date de commande</th>
				<th>Produits</th>
				<th>Total</th>
			</tr>
		</thead>
		<tbody>
			{% for item in purchases %}
				<tr>
					<td>{{ item.id }}</td>
					<td>{{ item.adress }}
						{{ item.postalCode }}
						{{ item.city }}</td>
					<td>{{ item.purchasedAt | date('d/m/Y H:i:s') }}</td>
					<td>
						<ul>
							{% for purchaseItem in item.purchaseItems %}
								<li>{{ purchaseItem.quantity }}x
									{{ purchaseItem.productName }}
									({{ purchaseItem.total / 100 }}) €
								</li>
							{% endfor %}
						</ul>
					</td>
					<td>{{ item.total / 100 }}
						€</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
